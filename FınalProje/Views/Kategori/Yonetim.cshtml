@model List<FınalProje.ViewModels.KategoriViewModel>

@{
    ViewData["Title"] = "Kategori Yönetimi";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Kategori Yönetim Paneli</h2>
        <a asp-action="Create" class="btn btn-success">+ Yeni Kategori Ekle</a>
    </div>

    <table class="table table-hover table-bordered shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Kategori Adı</th>
                <th style="width: 200px;">İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.KategoriID</td>
                    <td><strong>@item.Ad</strong></td>
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-action="Edit" asp-route-id="@item.KategoriID" class="btn btn-warning btn-sm">Düzenle</a>
                            <button type="button" class="btn btn-danger" onclick="silmeIslemi(@item.KategoriID)">
                                Sil
                            </button>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">← Kategori Sayfasına Dön</a>
    </div>
</div>
@section Scripts {
    <script>
        function silmeIslemi(id) {
            if (confirm("Bu kategoriyi silmek istediğinize emin misiniz?")) {

                $.ajax({
                    type: "POST",
                    url: "/Kategori/Delete", 
                    data: { id: id },
                    success: function (response) {
                        if (response.success) {

                            location.reload();
                        } else {
                            alert("Hata: " + response.message);
                        }
                    },
                    error: function () {
                        alert("Sunucuyla bağlantı kurulamadı!");
                    }
                });
            }
        }
    </script>
}