@model List<FınalProje.ViewModels.KapsulViewModel>

@{
    ViewData["Title"] = "Kapsül Yönetimi";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Kapsül Yönetim Paneli</h2>
        <a asp-action="Create" class="btn btn-success">+ Yeni Kapsül Ekle</a>
    </div>

    <table class="table table-hover table-bordered shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Kullanıcı Ad Soyad</th>
                <th>Kategori Adı</th>
                <th>Başlık</th>
                <th>Not</th>
                <th>Açılma Tarihi</th>
                <th>Oluşturulma Tarihi</th>
                <th style="width: 200px;">İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.KapsulID</td>
                    <td><strong>@item.KullaniciAdSoyad</strong></td>
                    <td><strong>@item.KategoriAdi</strong></td>
                    <td><strong>@item.Baslik</strong></td>
                    <td><strong>@item.Not</strong></td>
                    <td><strong>@item.AcilmaTarihi.ToShortDateString()</strong></td>
                    <td><strong>@item.OlusturmaTarihi.ToShortDateString()</strong></td>
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-action="Edit" asp-controller="Kapsul" asp-route-id="@item.KapsulID" class="btn btn-warning">
                                Düzenle
                            </a>                      
                            <button type="button" class="btn btn-danger" onclick="silmeIslemi(@item.KategoriID)">
                                Sil
                            </button>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">← Kapsül Sayfasına Dön</a>
    </div>
</div>
@section Scripts {
    <script>
        function silmeIslemi(id) {
            // 1. Onay kutusunu çıkart
            if (confirm("Bu kategoriyi silmek istediğinize emin misiniz?")) {

                // 2. Arka planda silme isteğini gönder
                $.ajax({
                    type: "POST",
                    url: "/Kategori/Delete", // Controller adınız farklıysa burayı güncelleyin
                    data: { id: id },
                    success: function (response) {
                        if (response.success) {
                            // 3. İŞLEM BAŞARILIYSA SAYFAYI YENİLE
                            location.reload();
                        } else {
                            alert("Hata: " + response.message);
                        }
                    },
                    error: function () {
                        alert("Sunucuyla bağlantı kurulamadı!");
                    }
                });
            }
        }
    </script>
}